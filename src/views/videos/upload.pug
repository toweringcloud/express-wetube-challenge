extends ../layout

block content
  center
    h2=pageTitle
  p.info ðŸ’« Please fill the form to add a new video.
  form(method="POST" enctype="multipart/form-data")
    input(type="text" name="title" placeholder="Title" required maxlength=50)
    input(type="text" name="summary" placeholder="Summary" required minlength=20)
    input(type="text" name="tags" placeholder="Tags (by comma)")
    label(for="video") Video File
    input(type="file" id="video" name="video" accept="video/*")
    center
      input(type="submit" value="ADD")
  if errorMessage
    p.warning=errorMessage